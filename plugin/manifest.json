{

  "manifest_version": 2,
  "name": "bookmarkToDisk",
  "version": "1.0",

  "description": "Sends current url to nb-bookmarks server",

  "icons": { "48": "icons/gold-album.png" },

  "browser_action": {
    "default_icon": {
      "16": "icons/gold-album.png",
      "32": "icons/gold-album.png"
    },
    "default_popup": "popup/choose_page.html",
    "browser_style": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./server/sendUrlToServer.js"]
    }
  ],
  
  "permissions": [
    "*://127.0.0.1/*",
    "*://localhost/*",
    "tabs"
  ]
  

}
