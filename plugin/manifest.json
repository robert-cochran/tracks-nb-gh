{

	"manifest_version": 2,
	"name": "tracks",
	"description": "manage local youtube tracks list",
	"version": "1.0",

	"icons": { "48": "icons/gold-album.png" },

	"browser_specific_settings": {
		"gecko": {
			"id": "tracks@extension.org",
			"strict_min_version": "50.0"
		}
	},

	"browser_action": {
		"default_icon": {
			"16": "icons/gold-album.png",
			"32": "icons/gold-album.png"
		},
		"default_popup": "./popup/handle-tracks.html",
		"browser_style": true
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["./content/handleTracks.js"]
		}
	],

	"background": {
		"scripts": [
			"./background/sendNativeMessage.js"
		],
		"persistent": true
	},

	"permissions": [
		"*://127.0.0.1/*",
		"*://localhost/*",
		"tabs",
		"nativeMessaging"
	]
  

}
